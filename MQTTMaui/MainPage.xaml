<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MQTTMaui.MainPage"
             xmlns:viewmodel="clr-namespace:MQTTMaui.ViewModel"
             x:DataType="viewmodel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry Text="{Binding BrokerAdress}"/>
            <Entry Text="{Binding Port}"/>
            <Button Text="Click to connect" Command="{Binding ConnectCommand}"/>

            <Label Text="{Binding Status}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
